  "paths": {
    "/api-token-auth/": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "fetches access token",
        "operationId": "fetchToken",
        "requestBody": {
          "description": "Login Info",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginAuth"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "response.token"
          },
          "400": {
            "description": "bad input parameter"
          }
        }
      }
    },
    "/v0/practices/{practice_id}/staff/{staff_id}/patients/{patient_id}/fetch": {
      "get": {
        "tags": [
          "Patients"
        ],
        "summary": "searches for a specific patient",
        "description": "By passing in the appropriate options, you can search for\navailable patients in the system\n",
        "operationId": "getPatientByID",
        "parameters": [
          {
            "name": "patient_id",
            "in": "path",
            "description": "Unique short ID of the patient",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "staff_id",
            "in": "path",
            "description": "Unique ID of the staff member",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "practice_id",
            "in": "path",
            "description": "Unique ID of the staff practice",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "response"
          },
          "400": {
            "description": "bad input parameter"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/v0/practices/{practice_id}/staff/{staff_id}/patients/": {
      "get": {
        "tags": [
          "Patients"
        ],
        "summary": "fetches all patients of staff member",
        "description": "Returns all patient data for a staff member.\n",
        "operationId": "getPatients",
        "parameters": [
          {
            "name": "staff_id",
            "in": "path",
            "description": "Unique ID of the staff member",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "practice_id",
            "in": "path",
            "description": "Unique ID of the staff practice",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "response"
          },
          "400": {
            "description": "bad input parameter"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "tags": [
          "Patients"
        ],
        "summary": "creates a patient",
        "description": "Create a new patient in the system\n",
        "operationId": "createNewPatient",
        "parameters": [
          {
            "name": "staff_id",
            "in": "path",
            "description": "Unique ID of the staff member",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "practice_id",
            "in": "path",
            "description": "Unique ID of the staff practice",
            "required": true,
            "style": "simple",
            "explode": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "Patient Info",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Patient"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "response"
          },
          "400": {
            "description": "bad input parameter"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/v0/practices/{practice_id}/staff/{staff_id}/patients/{patient_id}/": {
      "put": {
        "tags": [
          "Patients"
        ],
        "summary": "updates an existing patient",
        "description": "Updates an existing patient in the system\n",
        "operationId": "updatePatient",
        "parameters": [
          {
            "name": "staff_id",
            "in": "path",
            "description": "Unique ID of the staff member",
            "required": true,
